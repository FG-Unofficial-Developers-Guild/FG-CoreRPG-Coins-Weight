<root>
	<!-- This is the inventory tab -->
	<windowclass name="charsheet_inventory" merge="join">
		<sheetdata>
			<!--Coin Type 1-->
			<number_dropadd name="coinamount1" source="coins.slot1.amount">
				<script>
					function onValueChanged()
						if super and super.onValueChanged then
							super.onValueChanged()
						end
						CoinsWeight.onCoinsValueChanged(window.getDatabaseNode())
					end
					function onInit()
						if super and super.onInit then
							super.onInit()
						end
						onValueChanged()
					end
				</script>
				<delaykeyupdate />
			</number_dropadd>
			<stringu name="coinname1" source="coins.slot1.name">
				<script file="campaign/scripts/coin.lua" />
				<default>pp</default>
				<delaykeyupdate />
			</stringu>

			<!--Coin Type 2-->
